data <- c(11,13,13,15,15,16,19,20,20,20,21,21,22,23,24,
          30,40,45,45,45,71,72,73,75)

bins <- split(data, ceiling(seq_along(data)/3))


bin_mean <- lapply(bins, function(x) rep(mean(x), length(x)))
unlist(bin_mean)


bin_median <- lapply(bins, function(x) rep(median(x), length(x)))
unlist(bin_median)


bin_boundary <- lapply(bins, function(x){
  low <- min(x)
  high <- max(x)
  ifelse(abs(x-low) < abs(x-high), low, high)
})
unlist(bin_boundary)

